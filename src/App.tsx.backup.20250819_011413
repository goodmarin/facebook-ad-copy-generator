                : `You are a creative ${language} Facebook ad copywriter specializing in engaging, conversion-focused content. Generate 100% ${language} content only, no Chinese characters. Use only standard, widely-supported emojis (like üòä, üéâ, üí°, üöÄ, ‚≠ê, üéØ, üí™, üéµ, üéß, üéÅ, üî•, ‚ú®) and avoid complex or rare emojis that might display as boxes or question marks. Create emotional connections and include compelling calls-to-action. Make each copy unique and memorable.`
            },
            {
              role: 'user',
              content: prompt
            }
          ],
          max_tokens: 600,
          temperature: 0.7,
          top_p: 0.8,
          presence_penalty: 0.1,
          frequency_penalty: 0.1
        })
      });

      if (!response.ok) {
        throw new Error(`APIËØ∑Ê±ÇÂ§±Ë¥•: ${response.status}`);
      }

      const data = await response.json();
      const content = data.choices[0]?.message?.content;

      if (!content) {
        throw new Error('AIÊú™ËøîÂõûÊúâÊïàÂÜÖÂÆπ');
      }

      // Âø´ÈÄüËß£ÊûêËøîÂõûÁöÑÊñáÊ°à
      const copies = content
        .split(/copy\s*\d+[Ôºö:]\s*/i)
        .slice(1) // ÁßªÈô§Á¨¨‰∏Ä‰∏™Á©∫ÂÖÉÁ¥†
        .map((copy: string) => copy.trim().replace(/^[|:]\s*/, '').replace(/\s*[|:]\s*.*$/, ''))
        .filter((copy: string) => copy.length > 20 && copy.length < 500); // ËøáÊª§ÈïøÂ∫¶

      console.log('üîç AIÂéüÂßãËøîÂõûÂÜÖÂÆπ:', content);
      console.log('üîç Ëß£ÊûêÂêéÁöÑÊñáÊ°à:', copies);

      // üéØ Êô∫ËÉΩÂêéÂ§ÑÁêÜÔºöÁ°Æ‰øùÊñáÊ°àÂÆåÂÖ®Êú¨ÂúüÂåñ + EmojiÂ¢ûÂº∫
      const processedCopies = copies.map((copy: string, index: number) => {
        console.log('üîç Â§ÑÁêÜÂâçÊñáÊ°à:', copy);
        
        // Á¨¨‰∏ÄÊ≠•ÔºöËØ≠Ë®ÄÊú¨ÂúüÂåñÂ§ÑÁêÜ
        let processed = processCopyForLocalization(copy, language, region);
        console.log('üîç Êú¨ÂúüÂåñÂêéÊñáÊ°à:', processed);
        
        // Á¨¨‰∫åÊ≠•ÔºöEmojiÂØÜÂ∫¶Â¢ûÂº∫ÔºàÂº∫Âà∂4-6‰∏™emojiÔºâ
        processed = emojiEnhancer.enhanceCopy(processed, region, index);
        console.log('üîç EmojiÂ¢ûÂº∫ÂêéÊñáÊ°à:', processed);
        
        return processed;
      }).filter((copy: string) => copy.length > 20); // ÂÜçÊ¨°ËøáÊª§Â§™Áü≠ÁöÑÂÜÖÂÆπ

      // üîç È™åËØÅEmojiÂêàËßÑÊÄß
      const validation = validateEmojiCompliance(processedCopies, region);
      if (!validation.isCompliant) {
        console.warn('‚ùå EmojiÂêàËßÑÊÄßÊ£ÄÊü•Â§±Ë¥•:', validation.violations);
        // ÂèØ‰ª•Âú®ËøôÈáåÊ∑ªÂä†Ëøõ‰∏ÄÊ≠•ÁöÑ‰øÆÂ§çÈÄªËæë
      } else {
        console.log('‚úÖ EmojiÂêàËßÑÊÄßÊ£ÄÊü•ÈÄöËøá');
      }

      // Â¶ÇÊûúAIÁîüÊàêÂ§±Ë¥•ÊàñÂ§ÑÁêÜÂêéÊ≤°ÊúâÊúâÊïàÊñáÊ°àÔºå‰ΩøÁî®Â§áÁî®Ê®°Êùø
      if (processedCopies.length === 0) {
        console.warn(`AIÁîüÊàêÂ§±Ë¥•ÊàñÂ§ÑÁêÜÂêéÊó†ÊúâÊïàÊñáÊ°àÔºå‰ΩøÁî®Â§áÁî®Ê®°Êùø for ${region}`);
        return generateFallbackCopies(productInfo, region, config);
      }

      return processedCopies.slice(0, 3); // Á°Æ‰øùÂè™ËøîÂõû3Êù°ÊñáÊ°à

    } catch (error) {
      console.error(`ÁîüÊàêÊñáÊ°àÂ§±Ë¥• for ${region}:`, error);
      // ‰ΩøÁî®Â§áÁî®Ê®°Êùø
      return generateFallbackCopies(productInfo, region, config);
    }
  };



  // Ê∏ÖÁêÜÂºÇÂ∏∏emojiÁöÑÂáΩÊï∞ - Âº∫ÂåñÁâàÊú¨
  const cleanEmojis = (text: string): string => {
    console.log('cleanEmojis ËæìÂÖ•:', text);
    
    let cleanedText = text;
    
    // ÁßªÈô§ÊçüÂùèÁöÑUnicodeÂ≠óÁ¨¶Ôºà‰π±Á†ÅÔºâ
    cleanedText = cleanedText.replace(/[\uFFFD\uFFFE\uFFFF]/g, '');
    
    // ÁßªÈô§Â≠§Á´ãÁöÑUnicode‰ª£ÁêÜÂØπ
    cleanedText = cleanedText.replace(/[\uD800-\uDFFF](?![\uDC00-\uDFFF])/g, '');
    cleanedText = cleanedText.replace(/(?<![\uD800-\uDBFF])[\uDC00-\uDFFF]/g, '');
    
    // ÁßªÈô§ÊéßÂà∂Â≠óÁ¨¶ÔºàÈô§‰∫ÜÊç¢Ë°åÁ¨¶ÂíåÂà∂Ë°®Á¨¶Ôºâ
    cleanedText = cleanedText.replace(/[\u0000-\u0008\u000B\u000C\u000E-\u001F\u007F-\u009F]/g, '');
    
    // ÁßªÈô§Èõ∂ÂÆΩÂ≠óÁ¨¶
    cleanedText = cleanedText.replace(/[\u200B-\u200D\uFEFF]/g, '');
    
    // ÁßªÈô§‰∏Ä‰∫õÂèØËÉΩÂØºËá¥ÊòæÁ§∫ÈóÆÈ¢òÁöÑÁâπÊÆäÁ¨¶Âè∑
    const problematicSymbols = [
      '', // ÊõøÊç¢Â≠óÁ¨¶
      '\uFFFD', // UnicodeÊõøÊç¢Â≠óÁ¨¶
      '\uFFFE', // UnicodeÂ≠óËäÇÈ°∫Â∫èÊ†áËÆ∞
      '\uFFFF'  // UnicodeÁßÅÊúâ‰ΩøÁî®Âå∫Âüü
    ];
    
    problematicSymbols.forEach(symbol => {
      cleanedText = cleanedText.replace(new RegExp(symbol, 'g'), '');
    });
    
    // ‰øùÁïôÊâÄÊúâËØ≠Ë®ÄÂ≠óÁ¨¶ÔºåÂè™Ê∏ÖÁêÜÊçüÂùèÁöÑemoji
    cleanedText = cleanedText.split('').map(char => {
      const codePoint = char.codePointAt(0);
      if (!codePoint) return '';
      
      // ‰øùÁïôÊâÄÊúâËØ≠Ë®ÄÂ≠óÁ¨¶ÔºàÂåÖÊã¨Èü©ËØ≠„ÄÅÊó•ËØ≠„ÄÅ‰∏≠ÊñáÁ≠âÔºâ
      if (codePoint <= 127 || // ASCII
          (codePoint >= 0x3040 && codePoint <= 0x309F) || // Âπ≥ÂÅáÂêç
          (codePoint >= 0x30A0 && codePoint <= 0x30FF) || // ÁâáÂÅáÂêç
          (codePoint >= 0x4E00 && codePoint <= 0x9FFF) || // ‰∏≠ÊñáÊ±âÂ≠ó
          (codePoint >= 0xAC00 && codePoint <= 0xD7AF) || // Èü©ËØ≠Ë∞öÊñá
          (codePoint >= 0x0E00 && codePoint <= 0x0E7F) || // Ê≥∞ËØ≠
          (codePoint >= 0x1E00 && codePoint <= 0x1EFF) || // Êãâ‰∏ÅÊñáÊâ©Â±ï
          (codePoint >= 0x0100 && codePoint <= 0x017F)) { // Êãâ‰∏ÅÊñáÊâ©Â±ïA
        return char;
      }
      
      // Âè™‰øùÁïôÂÆâÂÖ®ÁöÑemoji
      const safeEmojiRanges = [
        [0x1F600, 0x1F64F], // Ë°®ÊÉÖÁ¨¶Âè∑
        [0x1F300, 0x1F5FF], // ÊùÇÈ°πÁ¨¶Âè∑ÂíåË±°ÂΩ¢ÊñáÂ≠ó
        [0x1F680, 0x1F6FF], // ‰∫§ÈÄöÂíåÂú∞ÂõæÁ¨¶Âè∑
        [0x1F1E0, 0x1F1FF], // Âå∫ÂüüÊåáÁ§∫Á¨¶Âè∑
        [0x2600, 0x26FF],   // ÊùÇÈ°πÁ¨¶Âè∑
        [0x2700, 0x27BF],   // Ë£ÖÈ•∞Á¨¶Âè∑
        [0xFE00, 0xFE0F],   // Âèò‰ΩìÈÄâÊã©Âô®
        [0x1F900, 0x1F9FF], // Ë°•ÂÖÖÁ¨¶Âè∑ÂíåË±°ÂΩ¢ÊñáÂ≠ó
        [0x1F018, 0x1F270], // Â∞ÅÈó≠Â≠óÊØçÊï∞Â≠óË°•ÂÖÖ
      ];
      
      const isSafe = safeEmojiRanges.some(([start, end]) => codePoint >= start && codePoint <= end);
      return isSafe ? char : '';
    }).join('');
    
    // Ê∏ÖÁêÜÂ§ö‰ΩôÁöÑÁ©∫Ê†º
    cleanedText = cleanedText.replace(/\s+/g, ' ').trim();
    
    console.log('cleanEmojis ËæìÂá∫:', cleanedText);
    return cleanedText;
  };

  // È™åËØÅemojiÊòØÂê¶ÂÆâÂÖ®ÁöÑÂáΩÊï∞
  const isSafeEmoji = (char: string): boolean => {
    // ÂÆö‰πâÂÆâÂÖ®ÁöÑemojiËåÉÂõ¥
    const safeEmojiRanges = [
      [0x1F600, 0x1F64F], // Ë°®ÊÉÖÁ¨¶Âè∑
      [0x1F300, 0x1F5FF], // ÊùÇÈ°πÁ¨¶Âè∑ÂíåË±°ÂΩ¢ÊñáÂ≠ó
      [0x1F680, 0x1F6FF], // ‰∫§ÈÄöÂíåÂú∞ÂõæÁ¨¶Âè∑
      [0x1F1E0, 0x1F1FF], // Âå∫ÂüüÊåáÁ§∫Á¨¶Âè∑
      [0x2600, 0x26FF],   // ÊùÇÈ°πÁ¨¶Âè∑
      [0x2700, 0x27BF],   // Ë£ÖÈ•∞Á¨¶Âè∑
      [0xFE00, 0xFE0F],   // Âèò‰ΩìÈÄâÊã©Âô®
      [0x1F900, 0x1F9FF], // Ë°•ÂÖÖÁ¨¶Âè∑ÂíåË±°ÂΩ¢ÊñáÂ≠ó
      [0x1F018, 0x1F270], // Â∞ÅÈó≠Â≠óÊØçÊï∞Â≠óË°•ÂÖÖ
    ];
    
    const codePoint = char.codePointAt(0);
    if (!codePoint) return false;
    
    return safeEmojiRanges.some(([start, end]) => codePoint >= start && codePoint <= end);
  };

  // Êô∫ËÉΩÊñáÊ°àÂêéÂ§ÑÁêÜÂáΩÊï∞ - ‰øÆÂ§çÁâàÊú¨
  const processCopyForLocalization = (copy: string, language: string, _region: string) => {
    let processedCopy = copy;
    
    // Ê∏ÖÁêÜÂºÇÂ∏∏emoji
    processedCopy = cleanEmojis(processedCopy);
    
    // Ê†πÊçÆËØ≠Ë®ÄËøõË°åÁâπÂÆöÁöÑÊ∏ÖÁêÜ
    switch (language) {
      case 'English':
        // Ëã±ËØ≠ÔºöÁßªÈô§ÊâÄÊúâÈùûËã±ËØ≠Â≠óÁ¨¶ÔºåÂè™‰øùÁïôËã±Êñá„ÄÅÊï∞Â≠ó„ÄÅËã±ÊñáÊ†áÁÇπÂíåÂÆâÂÖ®emoji
        processedCopy = processedCopy.replace(/[^\x00-\x7F\s]/g, char => {
          return isSafeEmoji(char) ? char : '';
        });
        processedCopy = processedCopy.replace(/\s+/g, ' ').trim();
        break;
        
      case 'Êó•Êú¨Ë™û':
        // Êó•ËØ≠Ôºö‰øùÁïôÊó•ËØ≠Â≠óÁ¨¶ÔºàÂπ≥ÂÅáÂêç„ÄÅÁâáÂÅáÂêç„ÄÅÊ±âÂ≠óÔºâ„ÄÅËã±Êñá„ÄÅÊï∞Â≠ó„ÄÅÊó•ÊñáÊ†áÁÇπÂíåÂÆâÂÖ®emoji
        processedCopy = processedCopy.replace(/[^\x00-\x7F\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FFF\uFF00-\uFFEF\s]/g, char => {
          return isSafeEmoji(char) ? char : '';
        });
        // ÁßªÈô§‰∏≠ÊñáÊ†áÁÇπÔºå‰øùÁïôÊó•ÊñáÊ†áÁÇπ
        processedCopy = processedCopy.replace(/[Ôºå„ÄÇÔºÅÔºüÔºõÔºö""''ÔºàÔºâ„Äê„Äë]/g, '');
        processedCopy = processedCopy.replace(/\s+/g, ' ').trim();
        break;
        
      case 'ÌïúÍµ≠Ïñ¥':
        // Èü©ËØ≠Ôºö‰øùÁïôÈü©ËØ≠Â≠óÁ¨¶ÔºàË∞öÊñá„ÄÅÊ±âÂ≠óÔºâ„ÄÅËã±Êñá„ÄÅÊï∞Â≠ó„ÄÅÈü©ÊñáÊ†áÁÇπÂíåÂÆâÂÖ®emoji
        processedCopy = processedCopy.replace(/[^\x00-\x7F\uAC00-\uD7AF\u4E00-\u9FFF\uFF00-\uFFEF\s]/g, char => {
          return isSafeEmoji(char) ? char : '';
        });
        // ÁßªÈô§‰∏≠ÊñáÊ†áÁÇπÔºå‰øùÁïôÈü©ÊñáÊ†áÁÇπ
        processedCopy = processedCopy.replace(/[Ôºå„ÄÇÔºÅÔºüÔºõÔºö""''ÔºàÔºâ„Äê„Äë]/g, '');
        processedCopy = processedCopy.replace(/\s+/g, ' ').trim();
        break;
        
      case '‰∏≠Êñá':
        // ‰∏≠ÊñáÔºö‰øùÁïô‰∏≠ÊñáÂ≠óÁ¨¶„ÄÅËã±Êñá„ÄÅÊï∞Â≠ó„ÄÅ‰∏≠ÊñáÊ†áÁÇπÂíåÂÆâÂÖ®emoji
        processedCopy = processedCopy.replace(/[^\x00-\x7F\u4E00-\u9FFF\uFF00-\uFFEF\s]/g, char => {
          return isSafeEmoji(char) ? char : '';
        });
        processedCopy = processedCopy.replace(/\s+/g, ' ').trim();
        break;
        
      default:
        // ÂÖ∂‰ªñËØ≠Ë®ÄÔºö‰øùÁïôÊâÄÊúâËØ≠Ë®ÄÂ≠óÁ¨¶ÔºåÂè™ÁßªÈô§‰∏çÂÆâÂÖ®ÁöÑemoji
        processedCopy = processedCopy.replace(/[^\x00-\x7F\u0080-\uFFFF\s]/g, char => {
          return isSafeEmoji(char) ? char : '';
        });
        processedCopy = processedCopy.replace(/\s+/g, ' ').trim();
    }
    
    return processedCopy;
  };

  // Â§áÁî®ÊñáÊ°àÁîüÊàêÂáΩÊï∞ - Â¢ûÂº∫ÁâàEmojiÊîØÊåÅ
  const generateFallbackCopies = (productInfo: any, region: string, config: any) => {
    const { language, style, culture } = config;
    const templates = getLocalizedTemplates(region, language);

    const translatedProduct = translateProductInfo(productInfo, region);

    // üéØ ‰∏∫Â§áÁî®Ê®°Êùø‰πüÊ∑ªÂä†EmojiÂ¢ûÂº∫
    const fallbackEmojiEnhancer = new EmojiEnhancer(SMART_EMOJI_CONFIG);
    
    const enhancedTemplates = templates.map((template, index) => {
      let copy = template
        .replace('{product}', translatedProduct.name)
        .replace('{features}', translatedProduct.features)
        .replace('{audience}', translatedProduct.audience)
        .replace('{style}', style)
        .replace('{culture}', culture);

      // üöÄ Â¢ûÂº∫Â§áÁî®Ê®°ÊùøÁöÑEmojiÂØÜÂ∫¶
      copy = fallbackEmojiEnhancer.enhanceCopy(copy, region, index);
      
      console.log(`üéØ Â§áÁî®Ê®°Êùø${index + 1}Â¢ûÂº∫ÂÆåÊàê:`, copy);
      return copy;
    });

    return enhancedTemplates;
  };

  // ÁøªËØë‰∫ßÂìÅ‰ø°ÊÅØ - ÂΩªÂ∫ï‰øÆÂ§çÁâàÊú¨
