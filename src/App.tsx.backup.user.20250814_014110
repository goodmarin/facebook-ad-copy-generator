                    value={productInfo.targetAudience}
                    onChange={(e) => setProductInfo(prev => ({ ...prev, targetAudience: e.target.value }))}
                    className="input-field glass"
                    placeholder="例如：年轻上班族、音乐爱好者、运动健身人群"
                    required
                  />
                </div>

