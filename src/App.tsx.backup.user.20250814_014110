        console.error(`生成文案失败 for ${region}:`, error);
        return [];
      }
    });

    // 等待所有地区完成
    const results = await Promise.all(regionPromises);
    
    // 合并所有结果
    results.forEach(regionCopies => {
      allCopies.push(...regionCopies);
    });

    return allCopies;
